{
  "builds": [
    { "src": "frontend/dist/your-app-name/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/(.*)", "destination": "/frontend/dist/your-app-name/$1" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
